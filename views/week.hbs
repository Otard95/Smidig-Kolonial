
{{#section 'head'}}
{{!-- Tillfällig lösning för att ta static files --}}
  <script src="/js/week.js" type="text/javascript"></script>
  <script src="/js/shoppinglist.js" type="text/javascript"></script>
  <link rel="stylesheet" href="/css/week.css">
  <link rel="stylesheet" href="/css/product-list-item.css">
{{/section}}

{{#> layout }}

{{> burger-shopping-list}}

<div class="container">
{{> headerplanner}}
  <div class="content">
    <div class="week-container">
      <div class="week-header">
        <div class="week-datename">{{#month_name month}}{{this}}{{/month_name}} 2018</div>
        <div class="week-days">
          <ul>
            <h3 class="this-week">Uke</h3>
            {{#each daysstring}}
              <li>{{this}}</li>
            {{/each}}
            <h3 class="this-week">{{uke_num}}</h3>
            {{#each days_arr}}
              {{#condition this '==' ../chosen_day}}
                <li class="chosen-day">{{this}}</li>
              {{/condition}}
              {{#condition this '!=' ../chosen_day}}
                <li class="font-aubergine btn-week-day" data-month="{{../month}}">{{this}}</li>
              {{/condition}}
            {{/each}}
          </ul>
        </div>
      </div>
      <div class="week-list">
        {{#if list}}
          <div id="list-name">{{list.name}}</div>
        {{/if}}
        {{#each list.products}}
          {{> product-list-item this }}
        {{/each}}
      </div>
      {{> categories}}
    </div>
  </div>
</div>
{{/layout}}
