
{{#section 'head'}}
{{!-- Tillfällig lösning för att ta static files --}}
  <script src="/js/week.js" type="text/javascript"></script>
  <link rel="stylesheet" href="/css/week.css">
{{/section}}

{{#> layout }}

  {{> headerplanner}}

    <div class="week-view-container">
      <div class="week-view-header">
        <div class="week-view-month">
          {{#month_name month}}{{this}}{{/month_name}} 2018
        </div>
        <div class="week-view-days">
          <ul>
            <h3 class="font-yellow">Uke {{weeknum}}</h3>
            {{#each daysstring}}
              <li>{{this}}</li>
            {{/each}}
            <h3 class="font-yellow">{{uke_num}}</h3>
            {{#each days_arr}}
              {{#condition this '==' ../chosen_day}}
                <li class="font-yellow">{{this}}</li>
              {{/condition}}
              {{#condition this '!=' ../chosen_day}}
                <li class="font-aubergine">{{this}}</li>
              {{/condition}}
            {{/each}}
          </ul>
        </div>
      </div>
      <!-- Fixar när vi vet height på fotter -->
      <div class="week-view-list">
      <!-- List content -->
      </div>
      <div class="week-add-button">
        <h3>Legg til varer</h3>
      </div>
    </div>
  </div>

{{/layout}}
