{{#section 'head'}}
  <link rel="stylesheet" href="/css/product-item.css">
{{/section}}

<div class="product-container">
  <img id="product-image" src="{{product.images.0.thumbnail.url}}" alt="">
  <h1 id="product-name">{{product.name.base}}</h1>
  <h1 id="price-per-unit">kr {{product.price.gross}}</h1>
  <img id="add-button" src="/imgs/icon/Velg vare.png" alt="">
  <h2 id="price-som">{{product.price.unit_quantity_name}}</h2>
  <h2 id="price-quantity">kr {{product.price.gross_unit}}/{{product.price.unit_quantity_abbreviation}}</h2>
</div>
