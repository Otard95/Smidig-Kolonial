{{#section 'head'}}
  <link rel="stylesheet" href="/css/calendar_v2.css">
{{/section}}

{{#> layout }}
<div class="container">
  <div class="calendar-title">
    <p id="title">Planleggeren</p>
    <div class="settings">&#9881;</div>
  </div>



  <div class="calendar-text">
    <p id="text">Velg en dag eller uke å planlegge handelen på</p>
    <div id="grey-divne"></div>
  </div>

  <div class = "month">
    <div id="this-year">2017</div>
    <div class="navigator">
      <div class = "pointer" id="previous-pointer">&#10094;</div>
      <div id="this-date">20</div>
      <div class = "pointer" id="next-pointer">&#10095;</div>
    </div>
    <div id="this-month">DESEMBER</div>
  </div>

  <div class = "cal">

    <div class="week-label">Uke</div>

    <div class = "weeks">
      <div>48</div>
      <div>49</div>
      <div>50</div>
      <div>51</div>
      <div>52</div>
    </div>

    <div class = "weekdays">
      <div>Man</div>
      <div>Tir</div>
      <div>Ons</div>
      <div>Tor</div>
      <div>Fre</div>
      <div>Lør</div>
      <div>Søn</div>
    </div>

    <div class = "date">
      {{#_for 27 31 1}}
        <div class="inactive">{{this}}</div>
      {{/_for}}
      {{#_for 1 32 1}}
        <div class="active">{{this}}</div>
      {{/_for}}
    </div>
  </div>
</div>
{{/layout}}
