
{{#section 'head'}}
  <script src="/js/week.js" type="text/javascript"></script>
  <link rel="stylesheet" href="/css/week.css">
{{/section}}

{{#> layout }}

  {{> headerplanner}}

  <div class="content">
    <div class="week-container">
      <div class="week-header">
        <div class="week-datename">Juni 2018, Lørdag</div>
        <div class="week-days">
          <ul>
            <h3 class="this-week">Uke</h3>
            {{#each daysstring}}
              <li>{{this}}</li>
            {{/each}}
            <h3 class="this-week">{{uke}}</h3>
            {{#each daysnum}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
        </div>
      </div>
      <div class="search-list">
        <h3 class="search-title">Varer</h3>
        <div class="search-container">
          <!--Legg inn forstørrelsesglass-->
          <p class="search-text">Søk i tusenvis av varer</p>
        </div>
        <div class="categories">
          <li>Inspirasjon</li>
          <li>Dine Varer</li>
          {{#each categories}}
            <li data-categoryId = {{this.id}}>{{this.name}}</li>
          {{/each}}
        </div>
      </div>
      <div class="item-button" id="button-search">
        <img id="button-white" src="/imgs/icon/Varer 2.png" alt="">
    </div>
  </div>
{{/layout}}
